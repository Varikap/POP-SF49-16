<Window x:Class="POP_SF49_16GUI.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POP_SF49_16GUI"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Login" Height="340" Width="270" FontSize="13" Background="DarkSlateBlue">
    <Border Background="Black" Margin="15" CornerRadius="20">
        <StackPanel Margin="20">
            <Label Content="Login" Foreground="White" FontSize="25" HorizontalAlignment="Center"></Label>
            <Separator></Separator>
            <Label Content="Korisnicko ime" Foreground="White" FontSize="16"></Label>
            <TextBox Name="tbUserName" Background="#545d6a" Foreground="White" FontSize="16"></TextBox>
            <Label Content="Lozinka" Foreground="White" FontSize="16"></Label>
            <PasswordBox Name="tbPassword" Background="#545d6a" Foreground="White" FontSize="16"></PasswordBox>
            <Button Name="btnSubmit" Click="btnSubmit_Click" Content="Submit" Background="#545d6a" Foreground="White" FontSize="18" Margin="44 25"></Button>
        </StackPanel>
    </Border>
</Window>
